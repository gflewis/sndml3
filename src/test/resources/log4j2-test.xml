<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console">
      <ThresholdFilter level="debug" />
      <PatternLayout>
        <Pattern>%d{HH:mm:ss} %level %logger{1} %X{context} %marker: %msg%n</Pattern>  
      </PatternLayout>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console" />
    </Root>
    <Logger name="servicenow" level="trace" />>
  </Loggers>
</Configuration>